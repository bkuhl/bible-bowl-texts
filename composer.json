{
    "name": "bkuhl/bible-bowl-texts",
    "description": "A PHP library for managing Bible quiz text by seasons and blocks",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BKuhl\\BibleBowlTexts\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BKuhl\\BibleBowlTexts\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "bkuhl/bible-csb": "^1.0",
        "bkuhl/scripture-ranges": "^1.0"
    },
    "scripts": {
        "test": "phpunit tests/"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 